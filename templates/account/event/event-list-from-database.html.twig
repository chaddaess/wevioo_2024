<style>
    .no-events{
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 25%;


    }
    .no-events-image{
        margin-bottom: 2em;
        max-height: 10em;
    }
</style>

{%if events is empty%}
    <div class="no-events">
        <img  class="no-events-image" src="{{ asset('/images/no-events.png') }}" alt="calendar"/>
        <p style="color:#555555;">No events found.</p>
    </div>
{% endif %}
<ul class="cards">
    {% for event in events %}
        <li>
            <a href="{{ path('app_user_event_show',{'id':event.id}) }}" class="card">
                <img src="{{ asset('/uploads/' ~ event.picture) }}" class="card__image" alt="" />
                <div class="card__overlay">
                    <div class="card__header">
                        <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>
                        <div class="card__header-text">
                            <h3 class="card__title">{{ event.name }}</h3>
                            <p class="card__status">{{ event.category }}</p>
                            <div style="display: flex;flex-direction: row;align-items: center">
                                <p class="card__status"> {{ event.interested }} interested â€¢ {{ event.attending}} attending  </p>
                            </div>
                        </div>
                    </div>
                    <div style="display: flex;flex-direction: row;align-items: center;margin-left: 2em">
