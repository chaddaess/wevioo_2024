{% extends 'base.html.twig' %}

{% block title %}My events{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/event_list_styles.css') }}">
{% endblock %}

{% block body %}
    <style>
        .button{
            display: flex;
            flex-direction: row;
            align-items: center;
            border-radius:60px;
            background-color: #FFFFFF;
            width: fit-content;
            padding: 1em;
        }
        a{
            display: inline-block;
            color: black;
            text-decoration: none;
        }

    </style>

    {% for type,messages in app.flashes %}
        {% for message in messages %}
            <div class="flash {{ type }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    <h1>My events</h1>
    <div class="button">
        <?xml version="1.0" ?><svg height="1em" id="Layer_1" style="enable-background:new 0 0 512 512; width: 1em" version="1.1" viewBox="0 0 512 512" width="512px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><path fill="#8A2BE2FF" d="M417.4,224H288V94.6c0-16.9-14.3-30.6-32-30.6c-17.7,0-32,13.7-32,30.6V224H94.6C77.7,224,64,238.3,64,256  c0,17.7,13.7,32,30.6,32H224v129.4c0,16.9,14.3,30.6,32,30.6c17.7,0,32-13.7,32-30.6V288h129.4c16.9,0,30.6-14.3,30.6-32  C448,238.3,434.3,224,417.4,224z"/></svg>
        <p>
            <a href="{{ path('app_event_new') }}">
                New Event
            </a>
        </p>

    </div>

        {%if events is empty%}
            <h1 style="border:1px solid blueviolet; color: blueviolet">No events yet!</h1>
        {% endif %}
        <ul class="cards">
        {% for event in events %}
            <li>
                <a href="{{ path('app_event_edit', {'id': event.id}) }}" class="card" title="edit event">
                    <img src="{{ asset('/uploads/' ~ event.picture) }}" class="card__image" alt="" />
                    <div class="card__overlay">
                        <div class="card__header">
                            <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>
                            <div class="card__header-text">
                                <h3 class="card__title">{{ event.name }}</h3>
                                <p class="card__status">{{ event.category }}</p>

                            </div>
                        </div>
                        <div style="display: flex;flex-direction: row;align-items: center;padding-left: 2em">
                            <?xml version="1.0" ?><svg  viewBox="0 0 32 32"  width="20" height="20" style="margin-right: 1em;" xmlns="http://www.w3.org/2000/svg"><title/><g data-name="locate location map pin" id="locate_location_map_pin"><path d="M23.78,6.15A11,11,0,0,0,8.22,21.71l4.1,4.1a1,1,0,1,0,1.42-1.42l-4.1-4.1a9,9,0,1,1,12.72,0l-7.07,7.07a1,1,0,0,0,0,1.42,1,1,0,0,0,1.42,0l7.07-7.07A11,11,0,0,0,23.78,6.15Z"/><path d="M21,14a5,5,0,1,0-5,5A5,5,0,0,0,21,14Zm-8,0a3,3,0,1,1,3,3A3,3,0,0,1,13,14Z"/></g></svg>
                            <p class="card__status">{{ event.address }}</p>
                        </div>
                        <div style="display: flex;flex-direction: row;align-items: center;margin-left: 2em">
                            <?xml version="1.0" ?><svg viewBox="0 0 32 32" width="20" height="30" style="margin-right: 1em;" xmlns="http://www.w3.org/2000/svg"><defs><style>.cls-1{fill:none;}</style></defs><title/><g data-name="Layer 2" id="Layer_2"><path d="M24,29H8a5,5,0,0,1-5-5V10A5,5,0,0,1,8,5H24a5,5,0,0,1,5,5V24A5,5,0,0,1,24,29ZM8,7a3,3,0,0,0-3,3V24a3,3,0,0,0,3,3H24a3,3,0,0,0,3-3V10a3,3,0,0,0-3-3Z"/><path d="M24,25H20a1,1,0,0,1-1-1V20a1,1,0,0,1,1-1h4a1,1,0,0,1,1,1v4A1,1,0,0,1,24,25Zm-3-2h2V21H21Z"/><path d="M28,13H4a1,1,0,0,1,0-2H28a1,1,0,0,1,0,2Z"/><path d="M11,9a1,1,0,0,1-1-1V4a1,1,0,0,1,2,0V8A1,1,0,0,1,11,9Z"/><path d="M21,9a1,1,0,0,1-1-1V4a1,1,0,0,1,2,0V8A1,1,0,0,1,21,9Z"/></g><g id="frame"><rect class="cls-1" height="32" width="32"/></g></svg>
                            <p class="card__status">{{ event.date|date }}</p>
                        </div>

                    </div>
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
